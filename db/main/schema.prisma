// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DB_URL")
  relationMode = "prisma"
}

model User {
  id              Int              @id @default(autoincrement())
  walletAddress   String?
  name            String?
  userCourses     UserCourse[]
  finishedLessons FinishedLesson[]

  @@map("users")
}

model Course {
  id                 Int                @id @default(autoincrement())
  title              String
  isPremium          Boolean            @default(false)
  thumbnail          String             @db.Text
  certificate        String?            @db.Text
  description        String?            @db.LongText
  courseModules      CourseModule[]
  courseTechnologies CourseTechnology[]
  userCourses        UserCourse[]

  @@map("courses")
}

model CourseModule {
  id            Int            @id @default(autoincrement())
  courseId      Int
  course        Course         @relation(fields: [courseId], references: [id], onDelete: Cascade)
  title         String
  courseLessons CourseLesson[]

  @@map("course_modules")
}

model CourseLesson {
  id              Int              @id @default(autoincrement())
  courseModuleId  Int
  courseModule    CourseModule     @relation(fields: [courseModuleId], references: [id], onDelete: Cascade)
  title           String
  content         String?          @db.LongText
  finishedLessons FinishedLesson[]

  @@map("course_lessons")
}

model CourseTechnology {
  id       Int    @id @default(autoincrement())
  courseId Int
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  tech     String
  img      String @db.Text

  @@map("course_technologies")
}

model UserCourse {
  id         Int     @id @default(autoincrement())
  userId     Int
  courseId   Int
  user       User    @relation(fields: [userId], references: [id])
  course     Course  @relation(fields: [courseId], references: [id])
  isComplete Boolean @default(false)

  @@map("user_courses")
}

model FinishedLesson {
  id       Int          @id @default(autoincrement())
  userId   Int
  lessonId Int
  user     User         @relation(fields: [userId], references: [id])
  lesson   CourseLesson @relation(fields: [lessonId], references: [id])

  @@map("finished_lessons")
}
